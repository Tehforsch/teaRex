#:kivy 1.0

<Label>:
    font_size: 35
    color: 0,0.6,0.18,1

<Button>:
    font_size: 35
    color: 1,1,1,1
    size_hint: None, None
    size: 225, 250

FloatLayout:
    size: 480, 320
    Button:
        text: "UP"
        pos: [10, 60]
        on_press:app.motorUp(self)

    Button:
        text: "DOWN"
        pos: [245, 60]
        on_press:app.motorDown(self)

    AnchorLayout:
        size_hint: 1.0, None
        size: 0, 60
        # canvas.before:
        #     Rectangle:
        #         pos: self.pos
        #         size: self.size
        #     Color:
        #         rgba: 
        #             0.3, 0,0,1
        anchor_y:
            "bottom"
        Label:
            size: 150, 20
            id: temperature
            text: app.temperature